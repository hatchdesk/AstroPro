@model Web.Application.ViewModels.Admin.Page.PageParentModel

<section class="top-section container-fluid">
    <div class="row align-items-center d-flex flex-wrap justify-content-center m-0 text-center">
        <div class="col-lg-4 col-md-2 col-sm-12 text-start ">
            <a class="d-flex align-items-center justify-content-center top-header" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="\Astrology (1).png" style="width: 90px; height: 90px;" alt="logo" />
                <p class="fs-3 text-white m-0 p-0 fw-bold " style="cursor:pointer">
                    @Model?.PageModel?.Contents?.Where(c => c.Tag == "Home_logoName").Select(c => c.Content).FirstOrDefault()
                </p>
            </a>
        </div>
        <!-- Carousel container visible only on medium and larger screens -->
        <div class="col-lg-8 col-md-10 d-none d-md-block d-flex align-items-center justify-content-center repo-header">
            @if (Model != null && Model.Services != null && Model.Services.Any())
            {
                <div class="row ">
                    @for (int i = 0; i < Model?.Services.Count; i++)
                    {
                        var service = Model?.Services[i];
                        <div class="col-5 col-md-2  ">
                            <div class="d-flex flex-column align-items-center justify-content-center">
                                <a class="abc service-icon" asp-controller="Home" asp-action="ServiceDetail" asp-route-id="@service.Id">
                                    @Html.Raw(service!.Icon)
                                </a>
                                <span class="d-block icon-text service-title mt-2">@service.Title</span>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</section>


<nav class="navbar navbar-expand-lg navbar-light navbar-custom" style="background-image: linear-gradient(45deg, red, yellow); padding: 10px 20px 10px 10px;">
    <div class="container-fluid">
        <!-- Navbar toggle button for mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              @*    @Html.Action("NavigationMenu", "Home")  *@

                <li class="nav-item">
                    <a class="nav-link menu-text" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link menu-text" asp-area="" asp-controller="Home" asp-action="Page" asp-route-name="Articles">Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Page" asp-route-name="AboutMe">About Me</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn-consult" asp-area="" asp-controller="Home" asp-action="Page" asp-route-name="Consultation">Book Consultation</a>
                </li>
               
            </ul>
        </div>
    </div>
</nav>