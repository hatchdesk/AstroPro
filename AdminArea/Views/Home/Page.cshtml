@model Web.Application.ViewModels.Admin.Page.PageParentModel

<div class="container-fluid">
    <div class="container mt-3">
        <div class=" row float-end">
            <ol class="breadcrumb">
                <li class="breadcrumb-item list-unstyled text-decoration-none"><a asp-controller="Home" asp-action="index">Home</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">About Us</a></li>
            </ol>
        </div>
        <div class="row mt-5">
            <div class="col-lg-8">
                <h2 class="card-title border-bottom mb-3">
                    @Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_Title1").Select(c => c.Content).FirstOrDefault()
                </h2>
                <div class="mt-3 fs-4" style="width: 100%; height: 250px;">
                    <img src="@Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_Imag1").Select(c => c.Content).FirstOrDefault()" style="width: 100%; height: 100%;" />
                </div>
                <div class="mt-2">
                    <p>
                        @Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_SubTitle1").Select(c => c.Content).FirstOrDefault()
                    </p>
                    <p>
                        @Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_SubTitle2").Select(c => c.Content).FirstOrDefault()
                    </p>
                </div>
                <div class="mt-3">
                    <p>
                        @Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_Title3").Select(c => c.Content).FirstOrDefault()
                    </p>
                    <p>
                        @Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_Subtitle3").Select(c => c.Content).FirstOrDefault()
                    </p>
                </div>
            </div>
            <div class="col-lg-4">
                <h2 class="card-title border-bottom mb-3">
                    @Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_Title2").Select(c => c.Content).FirstOrDefault()
                </h2>
                <div class="row">
                    <div class="col-lg-2">
                        <img width="54" height="54" alt="Customers" title="Customers" src="https://images.astroyogi.com/astroyogi2017/english/images/infopages/happy_customers_56x56.png" />
                    </div>
                    <div class="col-lg-10 h4 top0 line27">
                        <strong>3 Cr.</strong><br />
                        <span class="GrayColor">Happy Customers</span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-2">
                        <img width="54" height="54" alt="Professionals" title="Professionals" src="https://images.astroyogi.com/astroyogi2017/english/images/infopages/trusted_56x56.png" />
                    </div>
                    <div class="col-lg-10 h4 top0 line27">
                        <strong>2000+</strong><br />
                        <span class="GrayColor">Trusted Professionals</span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <img width="54" height="54" alt="Languages" title="Languages" src="https://images.astroyogi.com/astroyogi2017/english/images/infopages/languages_56x56.png" />
                    </div>
                    <div class="col-md-10 h4 top0 line27">
                        <strong>11+</strong><br />
                        <span class="GrayColor">Languages</span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <img width="54" height="54" alt="Countries" title="Countries" src="https://images.astroyogi.com/astroyogi2017/english/images/infopages/locations_56x56.png" />
                    </div>
                    <div class="col-md-10 h4 top0 line27">
                        <strong>85</strong><br />
                        <span class="GrayColor">Countries</span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <img width="54" height="54" alt="Experience" title="Experience" src="https://images.astroyogi.com/astroyogi2017/english/images/infopages/experience_56x56.png" />
                    </div>
                    <div class="col-md-10 h4 top0 line27">
                        <strong>22 Years</strong><br />
                        <span class="GrayColor">Experience</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <h2 class="card-title text-center border-bottom mt-3">
                    @Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_Title4").Select(c => c.Content).FirstOrDefault()
                </h2>
            </div>
                <div class="row">


                        @foreach (var service in Model.ServiceToModel)
                        {
                            <div class="col-sm-6 col-md-3 mb-3">
                                <div class="card h-100 custom-card">
                                    <div class="card-body text-center d-flex flex-column justify-content-between">
                                        <div class="rounded-circle bg-orange d-flex justify-content-center align-items-center mb-3 mx-auto" style="width: 60px; height: 60px;">
                                            @Html.Raw(service.Icon)
                                        </div>
                                        <div>
                                            <h5 class="card-title">@service.Title</h5>
                                            <p class="card-text">@service.Content</p>
                                            <a type="button" asp-controller="Home" asp-action="ServiceDetail" asp-route-id="@service.Id" class="btn btn-outline-primary">Learn More</a>
                                             
                                        </div>
                                    </div>
                                </div>
                            </div>
                    }
            </div>
        </div>
    </div>
</div>