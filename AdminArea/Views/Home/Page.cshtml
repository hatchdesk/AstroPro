@model Web.Application.ViewModels.Admin.Page.PageParentModel

<div class="container-fluid">
    <div class="container mt-3">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item list-unstyled text-decoration-none"><a asp-controller="Home" asp-action="index">Home</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">About Us</a></li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-12 col-sm-12">
                <h2 class="card-title mb-3">
                    @Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_Title1").Select(c => c.Content).FirstOrDefault()
                </h2>
                <div class="mt-3">
                    <img src="@Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_Imag1").Select(c => c.Content).FirstOrDefault()" class="img-fluid" alt="Image" style="width:100%;  height:250px" />
                </div>
                <div class="mt-4 text-justify">
                    <p>
                        @Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_SubTitle1").Select(c => c.Content).FirstOrDefault()
                    </p>
                    <p>
                        @Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_SubTitle2").Select(c => c.Content).FirstOrDefault()
                    </p>
                </div>
                <div class="mt-3 text-justify">
                    <p>
                        @Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_Title3").Select(c => c.Content).FirstOrDefault()
                    </p>
                    <p>
                        @Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_Subtitle3").Select(c => c.Content).FirstOrDefault()
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12 ">
                <h2 class="card-title mb-3">
                    @Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_Title2").Select(c => c.Content).FirstOrDefault()
                </h2>
                <div>
                    <div class="row mb-3 text-justify ">
                        <div class="col-3 col-md-4">
                            <img src="https://images.astroyogi.com/astroyogi2017/english/images/infopages/happy_customers_56x56.png" class="img-fluid" alt="Customers" />
                        </div>
                        <div class="col-9 col-md-8">
                            <strong>3 Cr.</strong><br />
                            <span class="text-muted">Happy Customers</span>
                        </div>
                    </div>
                    <div class="row mb-3 text-justify">
                        <div class="col-3 col-md-4">
                            <img src="https://images.astroyogi.com/astroyogi2017/english/images/infopages/trusted_56x56.png" class="img-fluid" alt="Professionals" />
                        </div>
                        <div class="col-9 col-md-8">
                            <strong>2000+</strong><br />
                            <span class="text-muted">Trusted Professionals</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-3 col-md-4">
                            <img src="https://images.astroyogi.com/astroyogi2017/english/images/infopages/languages_56x56.png" class="img-fluid" alt="Languages" />
                        </div>
                        <div class="col-9 col-md-8">
                            <strong>11+</strong><br />
                            <span class="text-muted">Languages</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-3 col-md-4">
                            <img src="https://images.astroyogi.com/astroyogi2017/english/images/infopages/locations_56x56.png" class="img-fluid" alt="Countries" />
                        </div>
                        <div class="col-9 col-md-8">
                            <strong>85</strong><br />
                            <span class="text-muted">Countries</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 col-md-4">
                            <img src="https://images.astroyogi.com/astroyogi2017/english/images/infopages/experience_56x56.png" class="img-fluid" alt="Experience" />
                        </div>
                        <div class="col-9 col-md-8">
                            <strong>22 Years</strong><br />
                            <span class="text-muted">Experience</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 <div class="container-fluid">
            <div class="row" style=" background-image: linear-gradient(45deg, red, yellow); width:100%">
                    <div class="col-lg-12"">
                        <h2 class="card-title text-center  mt-3">
                            @Model.PageModel?.Contents?.Where(c => c.Tag == "AboutUs_Title4").Select(c => c.Content).FirstOrDefault()
                        </h2>
                    </div>
                </div>
                <div class="container mt-2">
        <div class="row">
        @foreach (var service in Model.ServiceToModel)
        {
                <div class="col-sm-6 col-md-3 mb-5">
                    <div class="card h-100 custom-card">
                        <div class="card-body text-center d-flex flex-column justify-content-between">
                            <div class="rounded-circle bg-orange d-flex justify-content-center align-items-center mb-3 mx-auto" style="width: 60px; height: 60px;">
                            @Html.Raw(service.Icon)
                            </div>
                            <div class="card-body-About">
                                <h5 class="card-title">@service.Title</h5>
                                <p class="card-text">@service.Content</p>
                                <a type="button" asp-controller="Home" asp-action="ServiceDetail" asp-route-id="@service.Id" class="btn btn-outline-danger">Learn More</a>
                            </div>
                        </div>
                    </div>
                </div>
        }
        </div>
                </div>
               
        </div>
       
 
