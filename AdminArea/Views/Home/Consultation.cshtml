@model Web.Application.ViewModels.Admin.Page.PageParentModel

@{

	ViewData["Title"] = "Home";
}

		<div class="row mx-5 mt-2">
			<div class="col-lg-12 col-md-12 col-sm-12" >
				<ol class="breadcrumb">
			<li class="breadcrumb-item list-unstyled "><a class="text-decoration-none" style="color:darkred" asp-controller="Home" asp-action="index">Home</a></li>
					<li class="breadcrumb-item active"><a class="text-decoration-none" style="color:darkred" href="javascript:void(0)">Consultation</a></li>
				</ol>
			</div>
		</div>
<div class="Container-fluid">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="text-center fw-bold " style="color:darkred">Contact Us</h1>
				<p class="text-center mt-3 fw-lighter " style="color:darkred">Any question or remarks? Just write us a message!</p>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6 col-md-12 col-sm-12">
				<form method="post" asp-action="SendEmail" asp-controller="Consultation">
					<div class="row">
						<div class="form-group mt-3 col-lg-12 col-md-12 col-sm-12">
							<div class="input-wrapper">
								<input type="text" asp-for="ConsultationToModel!.Name" class="form-control corner-radius p-2" placeholder="Enter Name" id="name">
								<span class="asterisk">*</span>
							</div>
							<span asp-validation-for="ConsultationToModel!.Name" style="color:red"></span>
						</div>
					</div>
					<div class="row">
						<div class="form-group mt-3 col-lg-6 col-md-6 col-sm-6">
							<div class="input-wrapper">
							<input type="text" asp-for="ConsultationToModel!.Email" class="form-control rounded-4 p-2 astrisk" placeholder="name@example.com">
								<span class="asterisk">*</span>
							</div>
							<span asp-validation-for="ConsultationToModel!.Email" style="color:red"></span>
						</div>
						<div class="form-group mt-3 col-lg-6 col-md-6 col-sm-6">
							<div class="input-wrapper">
							<input type="text" asp-for="ConsultationToModel!.Phone" class="form-control rounded-4 p-2 astrisk" placeholder="Enter Your Phone">
								<span class="asterisk">*</span>
						</div>
							<span asp-validation-for="ConsultationToModel!.Phone" style="color:red"></span>
						</div>
					</div>
					<div class="row">
						<div class="form-group mt-3 col-lg-4 col-md-4 col-sm-12">
							<input style="cursor:pointer" type="date" asp-for="ConsultationToModel!.DateOfBirth" class="form-control rounded-4 p-2" placeholder="Enter Your Date Of Birth">	
							<span asp-validation-for="ConsultationToModel!.DateOfBirth" style="color:red"></span>
						</div>
						<div class="form-group mt-3 col-lg-3 col-md-4 col-sm-12">
							<input style="cursor:pointer" type="time" asp-for="ConsultationToModel!.TimeOfBirth" class="form-control rounded-4 p-2" placeholder="Enter Your Time Of Birth">
							<span asp-validation-for="ConsultationToModel!.TimeOfBirth" style="color:red"></span>
						</div>
						<div class="form-group mt-3 col-lg-5 col-md-4 col-sm-12">
							<div class="input-wrapper">
							<input type="text" asp-for="ConsultationToModel!.PlaceOfBirth" class="form-control rounded-4 p-2" placeholder="Enter Your Place Of Birth">
						   <span class="asterisk">*</span>
						</div>
							<span asp-validation-for="ConsultationToModel!.PlaceOfBirth" style="color:red"></span>
						</div>
					</div>
					<div class="form-group mt-3 col-lg-12 col-md-12 col-sm-12">
					
						<textarea class="form-control rounded-4 p-3 astrisk" asp-for="ConsultationToModel!.AnyInformation" rows="4" placeholder="Enter Your Any Information"></textarea>
						
					
					</div>
					<div class="mt-3">
						<button type="submit" class="btn btn-outline-danger mb-5" style="background-color: darkred; color: white;">Send Message</button>
					</div>
				</form>
			</div>
			<div class="col-lg-6 col-md-12 col-sm-12">
				<div class="rounded p-5 consult-bg mb-3">
					<div class="writeus color size">
						<h1 style="font-size: 28px; font-weight: bold" class="text-white">
							@Model.PageModel?.Contents?.Where(c => c.Tag == "Consultation_SubTitle1").Select(c => c.Content).FirstOrDefault()</h1>
						<p class="text-white" style="font-size: 18px; color: black; margin-top: 15px">
							@Model.PageModel?.Contents?.Where(c => c.Tag == "Consultation_Advertising").Select(c => c.Content).FirstOrDefault()
						</p>
					</div>
					<div class="phone mt-4">
						<a class=" text-decoration-none text-white" href="tel:+91- 8588 00 9900"><i class="fa-solid fa-phone fs-4 me-4"></i>+91- @Model.PageModel?.Contents?.Where(c => c.Tag == "Consultation_Phone").Select(c => c.Content).FirstOrDefault()</a>
					</div>
					<div class="mail mt-4">
						<a class="text-decoration-none text-white" href="support@starstell.com"><i class="fa-solid fa-envelope fs-4 me-4"></i>@Model.PageModel?.Contents?.Where(c => c.Tag == "Consultation_Email").Select(c => c.Content).FirstOrDefault()</a>
					</div>
					<div class="address mt-4">
						<p style="font-weight: 500" class="text-decoration-none text-white">
							<i class="fa-sharp fa-solid fa-location-dot fs-4 me-4 "></i>
							@Model.PageModel?.Contents?.Where(c => c.Tag == "Consultation_Address").Select(c => c.Content).FirstOrDefault()
						</p>
					</div>
					<div class="socials d-flex justify-content-start align-items-center">
						<div class="twitter fs-3">
							<a class="text-white" href="https://twitter.com/YourStarsTell"><i class="fa-brands fa-x-twitter"></i></a>
						</div>
						<div class="facebook ms-3 fs-3">
							<a class="text-white" href="https://www.facebook.com/StarsTell"><i class="fa-brands fa-facebook"></i></a>
						</div>
						<div class="instagram ms-3 fs-3">
							<a class="text-white" href="https://www.instagram.com/yourstarstell/"><i class="fa-brands fa-instagram"></i></a>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}