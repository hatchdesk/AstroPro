                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators1" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators1" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
              </section> 
           </div>
          <div class="row p-3 py-4" style="background-image: linear-gradient(45deg, red, yellow)" ;>
           <div class="col-lg-12 col-md-12 col-sm-12 col-12 d-flex justify-content-between align-items-center ms-5">
            <div>
                <h3 class="text-light fw-bold">@Model.PageModel?.Contents?.Where(c => c.Tag == "Home_ArticleHeading").Select(c => c.Content).FirstOrDefault()</h3>
            </div>
            <div class="me-5">
                <a class="btn btn-danger me-1" href="#carouselExampleIndicators2" data-bs-slide="prev">
                    <i class="fa fa-arrow-left"></i>
                </a>
                <a class="btn btn-danger  me-1" href="#carouselExampleIndicators2" data-bs-slide="next">
                    <i class="fa fa-arrow-right"></i>
                </a>
            </div>
        </div>
           <section class="my-3 pb-5 container">
        <div class="row">
            <div class="col-12">
                <div id="carouselExampleIndicators2" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.ArticleToModel.Count(); i += 3)
                        {
                            <div class="carousel-item  @(i == 0 ? "active" : "")">
                                <div class="row">
                                    @for (int j = i; j < i + 3 && j < Model.ArticleToModel.Count(); j++)
                                    {
                                        var article = Model.ArticleToModel[j];
                                        <div class="col-md-4 mb-3">
                                            <div class="card custom-card">
                                                <img class="img-fluid card-image" alt="100%x280" src="@article.ImageUrl" style="width:100%; max-height:250px">
                                                <div class="card-body ">
                                                    <h4 class="card-title cardTitle-truncate">@article.Title</h4>
                                                    <p class="card-text card-truncate">@article.Content</p>
                                                    <a asp-action="Detail" asp-controller="Article" asp-route-Id="@article.Id" class="btn btn-outline-danger">Read More</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators2" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators2" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </section>
         </div>
 </div> 
 



