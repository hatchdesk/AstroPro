@using Web.Application.ViewModels.Admin.Articles
@model List<ArticleToViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<!-- Carousel Section -->
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="@Url.Content("~/Image/service-bannner.jpg")" class="d-block w-100 custom-height" alt="First Slide">
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/Image/zodiac-sign-wheel-of-fortune-astrology-concept-power-of-the-moon-and-the-universe-free-photo.jpg")" class="d-block w-100 custom-height" alt="Second Slide">
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/Image/pngtree-vastu-vedic-hindu-astrology-3-colorful-background-posters-with-ganesha-god-image_1110357.jpg")" class="d-block w-100 custom-height" alt="Third Slide">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<br>

<!-- Article Cards Section -->
<div class="row justify-content-center">
    @foreach (var article in Model)
    {
        <div class="col-sm-3 col-md-2 mb-3">
            <div class="card h-100 custom-card">
                <div class="card-body text-center d-flex flex-column justify-content-between" >
                    <div class="rounded-circle bg-orange d-flex justify-content-center align-items-center mb-3 mx-auto" style="width: 60px; height: 60px;">
                        <i class="fas fa-star text-white fa-lg"></i>
                    </div>
                    <div>
                        <h5 class="card-title">@article.Category</h5>
                        <p class="card-text">@article.Title</p>
                        <a asp-controller="Home" asp-action="Category" asp-route-id="@article.Id" class="btn btn-danger" style="background-color: #711604;">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<br>
<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-light navbar-custom" style="background-image: linear-gradient(45deg, yellow, red);">
    <div class="collapse navbar-collapse justify-content-center" id="navbarAbout">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link font-weight-bold text-white fs-3" href="#">Latest Articles</a>
            </li>
        </ul>
    </div>
</nav>

<!-- Latest Articles Section -->
<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var article in Model)
    {
        <div class="col-md-4">
            <div class="card h-100 card-custom">
                <a asp-controller="Home" asp-action="Detail" asp-route-id="@article.Id" class="card-link">
                    <img src="@Url.Content("~/Image/astrology-dangerous-zodiac-signs-1-copy.webp")" class="card-img-top img-custom" alt="Hollywood Sign on The Hill" />
                </a>
                <div class="card-body">
                    <h5 class="card-title text-dark">@article.Title</h5>
                    <p class="card-text">
                        @article.Content
                    </p>
                </div>
            </div>
        </div>
    }
</div>
<!-- Pagination Section -->
<nav class="navbar navbar-expand-lg navbar-light navbar-custom" style="background-image: linear-gradient(45deg, yellow, red);">
    <div class="container justify-content-center">
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </div>
</nav>



