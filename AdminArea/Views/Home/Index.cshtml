@model Web.Application.ViewModels.Admin.Page.PageParentModel

@{
    ViewData["Title"] = "Home";
}

<!-- Carousel Section -->
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="@Url.Content("~/Image/service-bannner.jpg")" class="d-block w-100 custom-height" alt="First Slide">
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/Image/zodiac-sign-wheel-of-fortune-astrology-concept-power-of-the-moon-and-the-universe-free-photo.jpg")" class="d-block w-100 custom-height" alt="Second Slide">
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/Image/pngtree-vastu-vedic-hindu-astrology-3-colorful-background-posters-with-ganesha-god-image_1110357.jpg")" class="d-block w-100 custom-height" alt="Third Slide">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<br>
<div class="container-fluid mx-auto">
    <div class="row ">
        @foreach (var service in Model.ServiceToModel)
        {
            <div class="col-sm-6 col-md-3 mb-3">
                <div class="card h-100 custom-card">
                    <div class="card-body text-center d-flex flex-column justify-content-between">
                        <div class="rounded-circle bg-orange d-flex justify-content-center align-items-center mb-3 mx-auto" style="width: 60px; height: 60px;">
                            @Html.Raw(service.Icon)
                        </div>
                        <div>
                            <h5 class="card-title">@service.Title</h5>
                            <p class="card-text">@service.Content</p>
                            <a type="button" asp-controller="Home" asp-action="ServiceDetail" asp-route-id="@service.Id" class="btn btn-outline-primary">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
<br>
<section class="pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h3 class="mb-3 font-monospace">Astrology Article</h3>
            </div>
            <div class="col-6 carousel-icon">
                <a class="btn btn-danger mb-3 mr-1" href="#carouselExampleIndicators2" role="button" data-slide="prev">
                    <i class="fa fa-arrow-left"></i>
                </a>
                <a class="btn btn-danger mb-3" href="#carouselExampleIndicators2" role="button" data-slide="next">
                    <i class="fa fa-arrow-right"></i>
                </a>
            </div>
            <div class="col-12">
                <div id="carouselExampleIndicators2" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.ArticleToModel.Count(); i += 3)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="row">
                                    @for (int j = i; j < i + 3 && j < Model.ArticleToModel.Count(); j++)
                                    {
                                        var article = Model.ArticleToModel[j];
                                        <div class="col-md-4 mb-3">    
                                            <div class="card">
                                                    <img class="img-fluid card-image" alt="100%x280" src="@article.ImageUrl" >
                                                    <div class="card-body">
                                                        <h4 class="card-title cardTitle-truncate">@article.Title</h4>
                                                        <p class="card-text card-truncate">@article.Content</p>
                                                        <a asp-action="Detail" asp-controller="Article" asp-route-Id="@article.Id" class="btn btn-outline-primary">Read More</a>
                                                    </div>
                                            </div>
                                             
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




  



