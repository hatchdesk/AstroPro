@using Web.Application.ViewModels.Admin.Page

@model PageToCreateViewModel;

@{
    ViewBag.Title = "Create Page";
}

        <div class="row page-titles mx-5 mt-2">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xl-12">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Page" asp-action="List" class="text-decoration-none" style="color:darkred">Page </a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)" class="text-decoration-none" style="color:darkred">Create</a></li>
        </ol>
    </div>
</div>
    <div class="container-fluid mt-3">
    <div class="row">
        <div class="col-xl-8 offset-xl-2 col-lg-10 offset-lg-1 col-md-10 offset-md-1 col-sm-12">
    <div class="card my-5 ">
        <div class="card-body">
                    <h4 class="card-title text-center" style="color:darkRed">Add Page</h4>
            <div class="basic-form">
                <form method="post" asp-controller="Page" asp-action="Create" >
                                <div class="form-row">
                                    <div class="form-group mb-3">
                                    <label class="form-label  fw-bold required">Name</label>
                                        <input type="text" class="form-control " asp-for="Name" placeholder="Enter Your Name" />
                                        <span asp-validation-for="Name" style="color:red"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                    <label class="form-label  fw-bold required" asp-for="Tag"></label>
                                        <input asp-for="Tag" class="form-control" placeholder="Enter Your Tag Here"></input>
                                        <span asp-validation-for="Tag" class="text-danger"></span>
                                    </div>

                                <div class="float-end mt-3">
                                    <a type="submit" asp-area="Admin" asp-controller="Page" asp-action="List" class="btn btn-dark me-3 " style="background-color:black">cancel</a>
                                    <button type="submit" class="btn btn-dark " style="background-color:darkRed">Save</button>
                                </div>
                           </div>
                </form>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}






