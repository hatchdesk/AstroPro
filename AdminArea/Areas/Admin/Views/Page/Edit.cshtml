@using Web.Application.ViewModels.Admin.Page
@model PageToEditViewModel

@{
    ViewBag.Title = "Edit Page";
}


@* <div class="content-body"> *@
        <div class="row page-titles mx-5 mt-2">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xl-12">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Page" asp-action="List">Page </a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Edit</a></li>
        </ol>
    </div>
</div>
    <div class="container-fluid mt-3">
    <div class="row">
<div class="col-lg-8 offset-2">
    <div class="card my-5 ">
        <div class="card-body">
            <h4 class="card-title text-center">Edit Page</h4>
            <div class="basic-form">
                <form method="post" asp-controller="Page" asp-action="Edit" >
                                <div class="form-row">
                                    <div class="form-group mb-3">
                                        <label class="form-label  fw-bold">Name</label>
                                        <input type="text" class="form-control " asp-for="Name" placeholder="Enter Your Name" />
                                        <span asp-validation-for="Name" style="color:red"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label  class="form-label  fw-bold" asp-for="Tag"></label>
                                        <textarea asp-for="Tag" class="form-control" placeholder="Enter Your Tag Here"></textarea>
                                        <span asp-validation-for="Tag" class="text-danger"></span>
                                    </div>
                                    <table class="table table-fixed table-striped table-bordered mt-4">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Tag</th>
                                                <th>Content</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model?.Contents != null)
                                            {
                                            @foreach (var item in Model.Contents)
                                            {
                                                   <tr>
                                                        <td class="id-column">@item.Id</td>
                                                        <td class="other-column">@item.Tag</td>
                                                        <td class="other-column"><span class="truncate">@item.Content</span></td>
                                                   
                                                    <td class="other-column">
                                                        <!-- Button trigger for Edit modal -->
                                                        <a data-bs-toggle="modal" data-bs-target="#editModal@(item.Id)" title="Edit" class="ms-2">
                                                            <i class="fa fa-pencil color-muted m-r-5"></i>
                                                        </a>
                                                        <!-- Edit Modal -->
                                                        <div class="modal fade" id="editModal@(item.Id)" tabindex="-1" aria-labelledby="editModalLabel@(item.Id)" aria-hidden="true">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <p class="text-start">Are you sure you want to Edit this data?</p>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <a role="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</a>
                                                                        <a role="button" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="PageContent" asp-action="Edit">Edit</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <!-- Button trigger for Delete modal -->
                                                        <a data-bs-toggle="modal" data-bs-target="#deleteModal@(item.Id)" title="Delete" class="ms-2">
                                                            <i class="fa fa-close color-muted mr-2"></i>
                                                        </a>
                                                        <!-- Delete Modal -->
                                                        <div class="modal fade" id="deleteModal@(item.Id)" tabindex="-1" aria-labelledby="deleteModalLabel@(item.Id)" aria-hidden="true">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <p class="text-start">Are you sure you want to delete this data?</p>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <a role="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</a>
                                                                        <a role="button" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="PageContent" asp-action="Delete">Delete</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                            }
                                        </tbody>
                                    </table>
                                    </div>
                                   
                              <button type="submit" class="btn btn-dark text-center mt-2">Save</button>
                </form>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}







