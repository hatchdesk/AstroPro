@using Web.Application.ViewModels.Admin.Page
@model PageToEditViewModel

@{
    ViewBag.Title = "Edit Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Astro Pro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~lib/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="Style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-black">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="#">Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Article" asp-action="List" asp-area="Admin">Article</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="Page" asp-action="List">Page</a>
                    </li>
                </ul>
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="Account" asp-action="Logout">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

@* <div class="content-body"> *@
        <div class="row page-titles float-end mx-5 mt-2">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Page" asp-action="List">Page </a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Edit</a></li>
        </ol>
    </div>
</div>
    <div class="container-fluid mt-5">
    <div class="row">
<div class="col-lg-8 offset-2">
    <div class="card mt-5">
        <div class="card-body">
            <h4 class="card-title text-center">Edit Page</h4>
            <div class="basic-form">
                <form method="post" asp-controller="Page" asp-action="Edit" >
                                <div class="form-row">
                                    <div class="form-group mb-3">
                                        <label class="form-label  fw-bold">Name</label>
                                        <input type="text" class="form-control " asp-for="Name" placeholder="Enter Your Name" />
                                        <span asp-validation-for="Name" style="color:red"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label  class="form-label  fw-bold" asp-for="Tag"></label>
                                        <textarea asp-for="Tag" class="form-control" placeholder="Enter Your Tag Here"></textarea>
                                        <span asp-validation-for="Tag" class="text-danger"></span>
                                    </div>
                                    <table class="table table-fixed table-striped table-bordered mt-4">
                                        <thead>
                                            <tr>
                                                <th>Tag</th>
                                                <th>Content</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model?.Contents != null)
                                            {
                                            @foreach (var item in Model.Contents)
                                            {
                                                   <tr>
                                                        <td class="id-column">@item.Id</td>
                                                        <td class="other-column">@item.Tag</td>
                                                        <td class="other-column"><span class="truncate">@item.Content</span></td>
                                                   
                                                    <td class="other-column">
                                                            <a type="button" asp-area="Admin" asp-controller="Article" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                                            <a type="button" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                                            <a type="button" asp-area="Admin" asp-controller="Article" asp-action="Detail" asp-route-id="@item.Id">Info</a>
                                                    </td>
                                                </tr>
                                            }
                                            }
                                        </tbody>
                                    </table>
                                    </div>
                                   
                              <button type="submit" class="btn btn-dark">Save</button>
                </form>
            </div>
        </div>
      </div>
    </div>
  </div>
  @* </div> *@
</div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}







