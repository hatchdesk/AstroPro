@using Web.Application.ViewModels.Admin.Articles
@using Web.Domian.Enums
@model ArticleToCreateViewModel

@{
    ViewBag.Title = "Create Article";
}

<div class="row page-titles mx-5 mt-2">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xl-12">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="text-decoration-none" style="color:darkred" asp-area="Admin" asp-controller="Article" asp-action="List" style="color:darkRed">Article </a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)" style="color:darkRed">Create</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-xl-8 offset-xl-2 col-lg-10 offset-lg-1 col-md-10 offset-md-1 col-sm-12">
            <div class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title text-center" style="color:darkRed">Add Article</h4>
                    <div class="basic-form">
                        <form method="post" asp-controller="Article" asp-action="Create" enctype="multipart/form-data">
                            <div class="form-group mt-3">
                                <label class="form-label fw-bold required">Title</label>
                                <input type="text" class="form-control" asp-for="Title" placeholder="Enter Your Title" />
                                <span asp-validation-for="Title" style="color:red"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label class="form-label fw-bold required">Content</label>
                                <textarea id="tiny" class="form-control" asp-for="Content" placeholder="Enter Your Content" rows="5"></textarea>
                                <span asp-validation-for="Content" style="color:red"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label class="form-label fw-bold">Are you sure you want to publish this article?</label>
                                <input asp-for="IsPublished" type="checkbox" class="form-check-input border-2 ms-3 border border-black" />
                                
                            </div>
                            <div class="form-group mt-3">
                                <label class="form-label fw-bold">Category</label>
                                <select asp-for="Category" asp-items="Html.GetEnumSelectList<ArticleCategory>()">
                                    <option selected="selected" value="">Please select</option>
                                </select>
                              
                            </div>
                            <div class="form-group mt-3">
                                <label class="form-label fw-bold">Image</label>
                                <input asp-for="Image" type="file" class="form-control" />
                                @* <span asp-validation-for="Image" style="color:red" class="text-danger"></span> *@
                            </div>
                            <div class="float-end mt-3">
                                <a type="submit" asp-area="Admin" asp-controller="Article" asp-action="List" class="btn btn-dark me-3 " style="background-color:black">cancel</a>
                                <button type="submit" class="btn btn-dark " style="background-color:darkRed">Save</button>
                            </div>
                           
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
