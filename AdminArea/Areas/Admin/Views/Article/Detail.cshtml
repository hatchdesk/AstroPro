@using Web.Application.ViewModels.Admin.Articles
@model ArticleToViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="header" style="background-image: linear-gradient(45deg, red, yellow);">
                <a href="Consultation.html" class="article btn btn-danger">Book Consultation</a>
                <h1>Article of @Model.Category</h1>
                <p class="lead">@Model.Title</p>
            </div>
            <div class="container mt-5">
                <div class="row">
                    <div class="col-lg-12 float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item list-unstyled text-decoration-none">
                                <a asp-area="Admin" asp-controller="Home" asp-action="index">Article</a>
                            </li>
                            <li class="breadcrumb-item active">
                                <a asp-area="Admin" asp-controller="Article" asp-action="List">List</a>
                            </li>
                            <li class="breadcrumb-item active">
                                <a href="javascript:void(0)">Detail</a>
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-12">
                        <img src="~/@Model.ImageUrl" alt="Article Image" class="img-fluid mb-3" style="width: 100%; height: 250px">
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-lg-12">
                        <h3>What is @Model.Category</h3>
                        <p>
                            @Model.Content
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
