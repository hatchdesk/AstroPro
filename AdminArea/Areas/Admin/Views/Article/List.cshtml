@using Web.Application.ViewModels.Admin.Articles
@model IEnumerable<ArticleToCreateViewModel>

@{
    ViewBag.Title = "Articles";
}

<div class="row page-titles mx-5 mt-2">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xl-12">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">List</a></li>
        </ol>
    </div>
</div>

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Articles</h1>
        <a type="button" class="btn btn-primary text-center" asp-controller="Article" asp-action="Create">Add Article</a>
    </div>
    <table class="table table-fixed table-striped table-bordered mt-4">
        <thead>
            <tr>
                <th class="id-column">Id</th>
                <th class="other-column">Title</th>
                <th class="other-column">Content</th>
                <th class="other-column">Category</th>
                <th class="other-column">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model)
            {
                <tr>
                    <td class="id-column">@article.Id</td>
                    <td class="other-column">@article.Title</td>
                    <td class="other-column"><span class="truncate">@article.Content</span></td>
                    <td class="other-column">@article.Category</td>
                    <td class="other-column">

                        <!-- Button trigger for Edit modal -->
                        <a data-bs-toggle="modal" data-bs-target="#editModal@(article.Id)" title="Edit" class="ms-2">
                            <i class="fa fa-pencil color-muted m-r-5"></i>
                        </a>
                        <!-- Edit Modal -->
                        <div class="modal fade" id="editModal@(article.Id)" tabindex="-1" aria-labelledby="editModalLabel@(article.Id)" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p class="text-start">Are you sure you want to Edit this data?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <a role="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</a>
                                        <a role="button" class="btn btn-primary" asp-route-id="@article.Id" asp-controller="Article" asp-action="Edit">Edit</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Button trigger for Delete modal -->
                        <a data-bs-toggle="modal" data-bs-target="#deleteModal@(article.Id)" title="Delete" class="ms-2">
                            <i class="fa fa-close color-muted mr-2"></i>
                        </a>
                        <!-- Delete Modal -->
                        <div class="modal fade" id="deleteModal@(article.Id)" tabindex="-1" aria-labelledby="deleteModalLabel@(article.Id)" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p class="text-start">Are you sure you want to delete this data?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <a role="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</a>
                                        <a role="button" class="btn btn-primary" asp-route-id="@article.Id" asp-controller="Article" asp-action="Delete">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Info Button -->
                        <a type="button" asp-area="Admin" asp-controller="Article" asp-action="Detail" asp-route-id="@article.Id" title="Info" class="ms-2">
                            <i class="fa fa-info color-muted mr-2"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
