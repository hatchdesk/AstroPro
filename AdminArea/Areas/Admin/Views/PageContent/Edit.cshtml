@using Web.Application.ViewModels.Admin.PageContent
@model PageContentEditToViewModel;

@{
    ViewBag.Title = "Edit Page Content";
}

    <div class="row page-titles float-end mx-5 mt-2">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Page" asp-action="List">Page </a></li>
                <li class="breadcrumb-item"><a asp-controller="PageContent" asp-action="List">PageContent </a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Edit</a></li>
            </ol>
        </div>
    </div>
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-lg-8 offset-2">
                <div class="card mt-5">
                    <div class="card-body">
                        <h4 class="card-title text-center">Edit PageContent</h4>
                        <div class="basic-form">
                            <form method="post" asp-controller="PageContent" asp-action="Edit" enctype="multipart/form-data">
                                <div class="form-row">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold">Tag</label>
                                        <input type="text" class="form-control" asp-for="Tag" placeholder="Enter Your Title" />
                                        <span asp-validation-for="Tag" style="color:red"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-bold">Content</label>
                                        <input type="text" class="form-control" asp-for="Content" placeholder="Enter Your Content" />
                                        <span asp-validation-for="Content" style="color:red"></span>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-dark">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}






