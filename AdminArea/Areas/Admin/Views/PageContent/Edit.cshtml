@using Web.Application.ViewModels.Admin.PageContent

@model PageContentEditToViewModel;

@{
    ViewBag.Title = "Edit Page Content";
}

<h2>Edit Page Content</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Tag">Tag</label>
        <input asp-for="Tag" class="form-control" />
        <span asp-validation-for="Tag" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content">Content</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

